!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title NccWaw
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'pricing'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
  %h5.my-0.mr-md-auto.font-weight-normal
    %div{:align => "left"}
      = link_to "Wifi-Book", root_path
    %div{:align => "right"}
      %a.btn.btn-outline-primary{ href: "#"} Search
      - unless  user_signed_in?
        %a.p-2.text-dark{ href: new_user_registration_path} Sign up
        %a.p-2.text-dark{ href: new_user_session_path} Sign in
      - else
        %p= current_user.decorate.username
        %a.p-2.text-dark{ href: destroy_user_session_path} Logout
      <br />
= yield

